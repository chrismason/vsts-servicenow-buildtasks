{
    "version": "0.1.0",
    "command": "cmd",
    "args": [
        "/C"
    ],
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "Build",
            "args": [
                "npm run build:tasks"
            ]
        },
        {
            "taskName": "Package Extension",
            "args": [
                "npm run package:tasks"
            ]
        },
        {
            "taskName": "Publish Extension",
            "args": [
                "npm run publish:tasks"
            ]
        }
    ]
}