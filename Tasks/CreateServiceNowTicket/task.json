{
  "id": "5d1c06ab-cb85-490c-bace-04a415a36e00",
  "name": "ServiceNow: Create Ticket Task",
  "friendlyName": "Create a ticket in ServiceNow",
  "description": "Create a new entry in ServiceNow",
  "helpMarkDown": "",
  "category": "Build",
  "visibility": [
    "Build",
    "Release"
  ],
  "author": "Chris Mason",
  "version": {
    "Major": 0,
    "Minor": 4,
    "Patch": 0
  },
  "groups": [
    {
      "name": "advanced",
      "displayName": "Advanced",
      "isExpanded": false
    }
  ],
  "demands": [],
  "minimumAgentVersion": "1.83.0",
  "inputs": [
    {
      "name": "authenticationType",
      "type": "radio",
      "label": "Authentication Type",
      "required": true,
      "defaultValue": "basic",
      "options": {
        "basic": "Basic (Eureka)",
        "oauth": "OAuth (Fuji and higher)"
      }
    },
    {
      "name": "serviceNowOAuthEndPoint",
      "type": "connectedService:servicenow-oauth-key",
      "label": "Service Now Endpoint (Fuji+)",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Service Now endpoint that is configured with your client ID.",
      "visibleRule": "authenticationType = oauth"
    },
    {
      "name": "serviceNowBasicEndPoint",
      "type": "connectedService:servicenow-basic-key",
      "label": "Service Now Endpoint (Eureka)",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Service Now endpoint that is configured with a username and password.",
      "visibleRule": "authenticationType = basic"
    },
    {
      "name": "tableName",
      "required": true,
      "type": "pickList",
      "label": "Service Now Table",
      "defaultValue": "change_request",
      "options": {
        "change_request": "Change Requests",
        "incident": "Incidents"
      }
    },
    {
      "name": "useGenericData",
      "type": "radio",
      "label": "Use generic implementation?",
      "required": true,
      "defaultValue": "true",
      "options": {
        "true": "Yes",
        "false": "No"
      }
    },
    {
      "name": "jsonRepresentation",
      "type": "multiLine",
      "label": "JSON Representation",
      "required": true,
      "defaultValue": "",
      "visibleRule": "useGenericData = true"
    },
    {
      "name": "description",
      "type": "string",
      "label": "Description",
      "defaultValue": "",
      "required": true,
      "visibleRule": "useGenericData = false"
    },
    {
      "name": "urgency",
      "type": "pickList",
      "required": false,
      "label": "Incident Urgency",
      "defaultValue": "2",
      "options": {
        "1": "1 - High",
        "2": "2 - Medium",
        "3": "3 - Low"
      },
      "visibleRule": "useGenericData = false && tableName = incident"
    },
    {
      "name": "impact",
      "type": "pickList",
      "required": false,
      "label": "Incident Impact",
      "defaultValue": "2",
      "options": {
        "1": "1 - High",
        "2": "2 - Medium",
        "3": "3 - Low"
      },
      "visibleRule": "useGenericData = false && tableName = incident"
    },
    {
      "name": "storeResult",
      "type": "radio",
      "label": "Store ticket in variable?",
      "required": true,
      "defaultValue": "false",
      "options": {
        "true": "Yes",
        "false": "No"
      },
      "groupName": "advanced"
    },
    {
      "name": "storeVariable",
      "type": "string",
      "label": "Variable name",
      "required": true,
      "defaultValue": "",
      "visibleRule": "storeResult = true",
      "groupName": "advanced"
    }
  ],
  "instanceNameFormat": "Create ServiceNow ticket",
  "execution": {
    "Node": {
      "target": "app.js",
      "argumentFormat": ""
    }
  }
}